<script type="text/javascript">

function map(x, y, name) {
//	var map = new BMap.Map("container");
	var map = new BMap.Map("container", {coordType: BMAP_COORD_MERCATOR});
	var point = new BMap.Point(x, y);
	map.centerAndZoom(point, 15);
	
	// 信息窗口
//	var opts = {
//	  width : 200,     // 信息窗口宽度
//	  height: 80,     // 信息窗口高度
//	}
//	var infoWindow = new BMap.InfoWindow(name, opts);  // 创建信息窗口对象
//	map.openInfoWindow(infoWindow, map.getCenter());      // 打开信息窗口
	
	// 标注
	var marker = new BMap.Marker(point);        // 创建标注
	map.addOverlay(marker);
}

</script>
</head>
<body>
<div style="top:-8;left:-8;width:320px;height:416px;border:0px" id="container">
</div>
</body>
